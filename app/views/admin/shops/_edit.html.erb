
<%= form_with(model: shop, url: admin_shop_path, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if shop.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:</h4>
      <ul>
        <% shop.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :phone_number, class: "form-label" %>
    <%= form.number_field :phone_number, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :duel_space_available, class: "form-label" %>
    <%= form.number_field :duel_space_available, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :opening_hours, class: "form-label" %>
    <%= form.text_field :opening_hours, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
