<div class="tags">
  <% if tag_list.any? %>
    <div class="d-flex flex-wrap">
      <% tag_list.each do |tag| %>
        <span class="btn btn-secondary btn-sm mr-1 mb-2"> <!-- ボタンのサイズを小さくするクラスを追加 -->
          <%= link_to tag, shops_path(tag_name: tag), class: "text-white" %>
        </span>
      <% end %>
    </div>
  <% else %>
    <p></p>
  <% end %>
</div>
