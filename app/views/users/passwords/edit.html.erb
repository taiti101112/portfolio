<div class="signup-container d-flex justify-content-center align-items-center vh-100">
  <div class="signup-form-wrapper text-center">
    <h2 class="mb-3">パスワード変更</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "signup-form shadow p-4 rounded" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, "新しいパスワード", class: "form-label visually-hidden" %>
        <% if @minimum_password_length %>
          <em class="small d-block mb-1 text-muted">(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, class: "form-control", placeholder: "新しいパスワード", autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード確認", class: "form-label visually-hidden" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認", autocomplete: "new-password" %>
      </div>

      <div class="d-grid">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

  </div>
</div>
