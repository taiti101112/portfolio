
<div class="forgot-password-container d-flex justify-content-center align-items-center vh-100">
  <div class="forgot-password-form-wrapper text-center">
    <h2 class="mb-3">パスワードをお忘れですか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forgot-password-form shadow p-4 rounded" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label visually-hidden" %>
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="d-grid">
        <%= f.submit "パスワードリセットメールを送信", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to "ログインページへ戻る", new_session_path(resource_name), class: "text-primary" %>
    </div>
  </div>
</div>
