<div class="signup-container d-flex justify-content-center align-items-center vh-100">
  <div class="signup-form-wrapper text-center">
    <h2 class="mb-3">新規登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form shadow p-4 rounded" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :name, "名前", class: "form-label visually-hidden" %>
        <%= f.text_field :name, class: "form-control", placeholder: "名前", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label visually-hidden" %>
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label visually-hidden" %>
        <% if @minimum_password_length %>
          <em class="small d-block mb-1 text-muted">(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード確認", class: "form-label visually-hidden" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認", autocomplete: "new-password" %>
      </div>

      <div class="d-grid">
        <%= f.submit "登録する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-primary" %>
    </div>
  </div>
</div>
