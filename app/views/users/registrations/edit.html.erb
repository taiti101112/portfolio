<div class="container py-5">
  <!-- 編集フォームの見出し -->
  <h2 class="text-center mb-4 text-primary">ユーザー情報の編集</h2>

  <!-- ユーザー編集フォーム -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "edit-form shadow p-4 rounded" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <!-- 名前フィールド -->
    <div class="mb-3">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
    </div> 

    <!-- メールフィールド -->
    <div class="mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <!-- メール確認メッセージ -->
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-info mb-3">
        現在の確認待ちメールアドレス: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <!-- パスワードフィールド -->
    <div class="mb-3">
      <%= f.label :password, "新しいパスワード", class: "form-label" %> 
      <small class="text-muted">(変更しない場合は空欄のままにしてください)</small>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= @minimum_password_length %>文字以上</small>
      <% end %>
    </div>

    <!-- パスワード確認フィールド -->
    <div class="mb-3">
      <%= f.label :password_confirmation, "パスワードの確認", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

    <!-- 現在のパスワードフィールド -->
    <div class="mb-3">
      <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
      <small class="text-muted">(変更を確認するために必要です)</small>
      <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <!-- 更新ボタン -->
    <div class="d-grid">
      <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <!-- 戻るリンク -->
  <div class="mt-3">
    <%= link_to "戻る", :back, class: "btn btn-outline-secondary" %>
  </div>

  <!-- アカウント削除 -->
  <h5 class="mt-5 text-muted">アカウントの削除</h5>
  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-outline-danger btn-sm" %>


</div>
