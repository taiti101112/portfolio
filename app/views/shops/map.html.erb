<div class="container py-4">
  <div class="card shadow-sm mb-4">
  <div class="card-body">
    <h5 class="card-title">検索条件</h5>
    <%= form_with url: map_shops_path, method: :get, local: true, class: "mb-4" do |form| %>
      <div class="row align-items-center">
        <!-- ショップ名検索 -->
        <div class="col-md-4">
          <%= form.label 'q[name_cont]', "ショップ名を入力", class: "form-label" %>
          <%= form.text_field 'q[name_cont]', value: params.dig(:q, :name_cont), class: "form-control" %>
        </div>

        <!-- タグ検索 -->
        <div class="col-md-4">
          <%= form.label :tag_name, "取り扱いタイトルを選択", class: "form-label" %>
          <%= form.select :tag_name, options_for_select(@tags.map { |tag| [tag.name, tag.name] }, params[:tag_name]), { include_blank: "選択してください" }, class: "form-control" %>
        </div>

        <!-- 営業中のみ表示 -->
        <div class="col-md-4">
          <div class="form-check form-switch mt-4">
            <%= form.check_box :open_now, { class: "form-check-input", checked: params[:open_now] == '1' }, '1', '0' %>
            <%= form.label :open_now, "営業中のショップのみ表示", class: "form-check-label" %>
          </div>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-md-12">
          <%= form.submit "検索", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <div id="map" style="height: 500px;" class="rounded shadow-sm border"></div>
</div>

<script>
  function initMapForMapPage() {
    // マップの初期化
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 12,
      center: { lat: 35.6984, lng: 139.7730 } // 秋葉原駅がマップの中心になるように設定
    });

    var markers = [];
    var infowindow = new google.maps.InfoWindow();

    // ショップのマーカー追加
    <% @shops.each do |shop| %>
      (function() {
        var marker = new google.maps.Marker({
          position: { lat: <%= shop.latitude %>, lng: <%= shop.longitude %> },
          map: map,
          title: '<%= j shop.name %>'
        });

        var contentString = `
          <div style="min-width: 200px; padding: 10px;">
            <h5 class="mb-1 text-primary"><i class="bi bi-shop me-2"></i><%= j shop.name %></h5>
            <p class="mb-1 text-muted"><i class="bi bi-geo-alt-fill me-1"></i><%= j shop.address %></p>
            <a href="<%= shop_path(shop) %>" class="btn btn-outline-primary btn-sm mt-2">詳細を見る</a>
          </div>
        `;

        marker.addListener('click', function() {
          infowindow.setContent(contentString);
          infowindow.open(map, marker);
        });

        markers.push(marker);
      })();
    <% end %>
  }

  window.initMapForMapPage = initMapForMapPage;
</script>

<!-- Google Maps APIの読み込み（callbackをinitMapForMapPageに変更） -->
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMapForMapPage" async defer></script>


